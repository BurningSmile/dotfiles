[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " KEY "
format-prefix-font = 1
format-prefix-foreground = ${colors.blue}
format-prefix-background = ${colors.background}

label-layout = %layout%
label-layout-font = 1
label-layout-foreground = ${colors.blue}
label-layout-background = ${colors.background}

; label-indicator-padding = 2
; label-indicator-margin = 1
; label-indicator-background = ${colors.blue}
; label-indicator-underline = ${colors.blue}

[module/filesystem]
type = internal/fs
interval = 10

mount-0 = /

label-mounted = %{F#5294e2}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
label-mounted-background = ${colors.grey}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
fuzzy-match = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true
label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.white}
label-mode-background = ${colors.background-grey}

; focused = Active workspace on focused monitor
; label-focused = " ● "
label-focused = "%index% ● "
label-focused-foreground = ${colors.arc}
label-focused-background = ${colors.background-grey}
;label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = "%index% ○ "
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background-grey}

; visible = Active workspace on unfocused monitor
label-visible = "%index% ● "
label-visible-foreground = ${colors.arc}
label-visible-background = ${colors.background-grey}

; urgent = Workspace with urgency hint set
label-urgent = "%index% ● "
label-urgent-foreground = ${colors.red}
label-urgent-background = ${colors.background-grey}

; ws-icon-[0-9]+ = label;icon
; ; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1:Terminals;
ws-icon-1 = 2:Steam;
ws-icon-2 = 3:Internet;;
ws-icon-3 = 4:Random;
ws-icon-4 = 5:Random;
ws-icon-5 = 6:Random;
ws-icon-6 = 7:Random;
ws-icon-7 = 8:Random;
ws-icon-8 = 9:RDP/Spice;
ws-icon-9 = 10:Music;
ws-icon-default = 

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600
interval = 2

format-online = <label-song> <icon-prev> <toggle> <icon-next> <icon-random> <icon-repeat>
format-prefix-background = ${colors.background}
label-background = ${colors.background}

label-song = %title% - %artist%

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-random = 
icon-repeat = 
icon-repeatone =  1

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/backlight

format = <label> <bar>
label = BL
card = intel_backlight

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight
output = eDP-1-1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " CPU "
format-prefix-foreground = ${colors.pink}
format-prefix-background = ${colors.background}
label = %percentage%%
label-foreground = ${colors.pink}
label-background = ${colors.background}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " RAM "
format-prefix-foreground = ${colors.purple}
format-prefix-background = ${colors.grey}
label = %percentage_used%%
label-foreground = ${colors.purple}
label-background = ${colors.grey}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
format-connected-prefix-foreground = ${colors.grey}
format-connected-prefix-background = ${colors.grey}
label-connected = %essid%
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.grey}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.grey}
format-connected-prefix-background = ${colors.grey}
label-connected = %local_ip%
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.grey}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/eth-custom]
; Used for getting the internal address of a bridged interface, the eth module didn't want to support it when this config was made, this is a work around for that problem.
type = custom/script
interval = 120
exec = "ip addr show wlp3s0 | awk '/(scope)/ { print $2 }' | cut -d':' -f2 | head -1"
;format-prefix =
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background-grey}
label-foreground = ${colors.foreground}
label-background = ${colors.background-grey}

[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
label = vpn
format-underline = #5294e2
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background-grey}
label-foreground = ${colors.foreground}
label-background = ${colors.background-grey}

[module/date]
type = internal/date
interval = 5

date = " %Y-%m-%d"

time= %H:%M:%S

label = %date% %time%
label-foreground = ${colors.white}
label-background = ${colors.grey}

[module/redshift]
type = custom/script
interval = 5

exec = ~/.config/polybar/redshift.sh

